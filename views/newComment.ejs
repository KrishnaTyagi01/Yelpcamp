<%- include("partials/header") %>
<div class="container">

    <h1 style="text-align: center;">Add a new Comment to <%=campground.name%></h1>
    <div style="margin: 25px auto; width: 30%;">
        <form action="/campground/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">submit</button>
            </div>
        </form>
        <a href="/campground">Go Back</a>
    </div>
    
</div>


<%- include("partials/footer") %>